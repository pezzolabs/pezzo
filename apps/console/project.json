{
  "name": "console",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/console",
  "projectType": "application",
  "targets": {
    "build": {
      "dependsOn": ["^graphql-codegen"],
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/console",
        "outputPath": "dist/apps/console"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/console"
        },
        "production": {}
      }
    },
    "serve": {
      "dependsOn": ["^graphql-codegen"],
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "console:build",
        "dev": true,
        "proxyConfig": "apps/console/proxy.conf.json",
        "port": 4201
      },
      "configurations": {
        "development": {
          "buildTarget": "console:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "console:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "console:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/console/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/console/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker:build": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "defaultConfiguration": "local",
      "options": {},
      "configurations": {
        "local": {
          "tags": ["pezzolabs/pezzo-console"],
          "push": false
        },
        "ci": {
          "push": true,
          "platforms": ["linux/amd64"],
          "metadata": {
            "images": ["ghcr.io/pezzolabs/pezzo/console"]
          }
        }
      }
    }
  },
  "tags": []
}
